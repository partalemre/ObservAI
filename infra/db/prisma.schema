generator client { provider = "prisma-client-js" }
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User {
  id        String @id @default(cuid())
  email     String @unique
  name      String
  role      String
  password  String
  createdAt DateTime @default(now())
}
model MenuItem {
  id        String @id @default(cuid())
  name_tr   String
  name_en   String
  price     Decimal
  category  String
  inStock   Boolean @default(true)
  createdAt DateTime @default(now())
}
model Order {
  id        String @id @default(cuid())
  status    String
  total     Decimal
  createdAt DateTime @default(now())
}
